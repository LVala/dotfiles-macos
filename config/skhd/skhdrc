# Navigate spaces
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5

# Move windows between spaces
shift + ctrl - 1 : yabai -m window --space 1
shift + ctrl - 2 : yabai -m window --space 2
shift + ctrl - 3 : yabai -m window --space 3
shift + ctrl - 4 : yabai -m window --space 4
shift + ctrl - 5 : yabai -m window --space 5

# Navigate windows
ctrl - h : yabai -m window --focus west || yabai -m display --focus west
ctrl - j : yabai -m window --focus south || yabai -m display --focus south
ctrl - k : yabai -m window --focus north || yabai -m display --focus north
ctrl - l : yabai -m window --focus east || yabai -m display --focus east

# Move windows in one space
shift + ctrl - h : yabai -m window --warp west
shift + ctrl - j : yabai -m window --warp south
shift + ctrl - k : yabai -m window --warp north
shift + ctrl - l : yabai -m window --warp east

# Toggle floating mode
alt - space : yabai -m window --toggle float

# Toggle fullscreen on window
shift + alt - f : yabai -m window --toggle zoom-fullscreen

# Open terminal
alt - return : open -n -a alacritty

# Close window
alt - q : yabai -m --close

